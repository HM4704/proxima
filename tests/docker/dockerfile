# Use the official Golang image as the base image
FROM golang:1.22-bookworm AS build

#RUN go install github.com/go-delve/delve/cmd/dlv@latest

# Set the current Working Directory inside the container
RUN mkdir /scratch
WORKDIR /scratch

# Prepare the folder where we are putting all the files
RUN mkdir /app

WORKDIR /scratch

# Copy everything from the current directory to the PWD(Present Working Directory) inside the container
COPY proxima/ .

# copy the config files
RUN cp ./tests/docker/boot/* /app
RUN cp -r ./tests/docker/* /app

# Download go modules
RUN go mod download
RUN go mod verify

# Build the Go server program
RUN go build
RUN cp ./proxima /app

WORKDIR /scratch/proxi
# Download go modules
RUN go mod download
RUN go mod verify

RUN go build
RUN cp ./proxi /app


WORKDIR /app
RUN ./proxi init ledger_id

# Expose the port Delve will listen on
#EXPOSE 40000

